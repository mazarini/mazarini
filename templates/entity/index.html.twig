{% extends 'base.html.twig' %}

{% block title %}
	Entity index
{% endblock %}

{% block main %}
	<h1>Entity index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Slug</th>
				<th>Id</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for entity in entities %}
				<tr>
					<td>{{ entity.slug }}</td>
					<td>{{ entity.id }}</td>
					<td>
						<a href="{{ path('app_entity_show', {'id': entity.id}) }}">show</a>
						<a href="{{ path('app_entity_edit', {'id': entity.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_entity_new') }}">Create new</a>
{% endblock %}
